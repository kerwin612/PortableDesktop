{
    "shortcuts": [
        {
            "key": "shutdown",
            "cmd": "shutdown /s /f /t 0",
            "style": "background-color: darkred;"
        },
        {
            "key": "reboot",
            "cmd": "shutdown /r /f /t 0",
            "style": "background-color: darkorange;"
        },

        {
            "key": "open",
            "cmd": "explorer",
            "parametersRequired": true,
            "style": "background-color: navajowhite;"
        },
        {
            "key": "home",
            "cmd": "explorer %HOME%",
            "style": "background-color: pink;"
        },
        {
            "key": "hello-world",
            "cmd": "run-bat %HOME%\\.bin\\hello.bat world",
            "style": "background: linear-gradient(to right, gray 0%, paleturquoise 36%, paleturquoise 36%, red 100%);"
        },

        {
            "key": "mstsc",
            "cmd": "mstsc",
            "group": "accessories",
            "style": "background-color: darkcyan;"
        },
        {
            "key": "notepad",
            "cmd": "notepad",
            "group": "accessories",
            "style": "background-color: darkcyan;"
        },
        {
            "key": "calculator",
            "cmd": "calc",
            "group": "accessories",
            "style": "background-color: darkcyan;"
        },
        {
            "key": "paint",
            "cmd": "mspaint",
            "group": "accessories",
            "style": "background-color: darkcyan;"
        },

        {
            "key": "edge.restore",
            "cmd": "msedge --restore-last-session --allow-file-access-from-files",
            "style": "background-color: lightseagreen;"
        },

        {
            "key": "jd.gui",
            "cmd": "jd-gui",
            "group": "dev",
            "style": "background-color: orange;"
        },

        {
            "label": "LinkPath",
            "key": "files.lp",
            "cmd": "explorer %PORTABLE_RUNNER_ENV_LINK_PATH%",
            "group": "files",
            "style": "background-color: navajowhite;"
        },
        {
            "label": "TargetPath",
            "key": "files.tp",
            "cmd": "explorer %PORTABLE_RUNNER_ENV_TARGET_PATH%",
            "group": "files",
            "style": "background-color: navajowhite;"
        }
    ]
}
